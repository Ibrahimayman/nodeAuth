<% layout("layout") %>
<div class="container">
    <div class="row">

        <div class="col-lg-6 col-md-offset-3">
            <form method="post" style="margin-top: 10%" action="/users/register" enctype="multipart/form-data">
                <h1> Signup </h1>
                <div class="form-group">
                    <label for="name">name: </label>
                    <input type="text" class="form-control" placeholder="enter the name" name="name">
                </div>
                <div class="form-group">
                    <label for="email">Email: </label>
                    <input type="email" class="form-control" placeholder="enter the email" name="email">
                </div>
                <div class="form-group">
                    <label for="username">username: </label>
                    <input type="text" class="form-control" placeholder="enter the username" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control" placeholder="enter the password" name="password">
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password: </label>
                    <input type="password" class="form-control" placeholder="renter the password" name="password2">
                </div>
                <div class="form-group">
                    <label for="ProfileImg">profile Image: </label>
                    <input type="file" class="form-control" placeholder="upload the image" name="ProfileImg">
                </div>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-search"></span>
                    Submit
                </button>

            </form>
        </div>
    </div>
</div>